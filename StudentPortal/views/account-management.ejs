<!-- account management -->

<div class="col-md-12 bg-white mt-2">
    <!-- Quản lý Phòng/Khoa -->
    <div class="d-flex justify-content-between my-3">
        <h4>Quản lý Phòng/Khoa</h4>
        <a href="/user/register" class="btn btn-primary">Thêm</i></a>
    </div>
    
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên Phòng/Khoa</th>
                <th scope="col">Quản lý nội dung</th>
                <!-- <th scope="col">Chỉnh sửa</th> -->
            </tr>
        </thead>
        <tbody>
            <% accounts.forEach((account, index) => { %>
                <tr>
                    <th scope="row"><%= index+1 %> </th>
                    <td><%= account.name %> </td>
                    <td>
                        <% if (account.role == 'admin') { %> 
                            Tất cả phòng ban
                        <% }else { account.department.forEach(department => { %>
                            <%= department.department %>
                            <br>
                        <% })} %> 
                    </td>
                    <!-- <td>
                        <a href="">Sửa</a>,
                        <a href="">Xóa</a>
                    </td> -->
                </tr>
            <% }) %> 
            
            
        </tbody> 
    </table>
    

    <!-- Quản lý sinh viên -->
    <!-- Lưu ý sắp xếp theo Khoa -->
    <div class="my-3">
        <h4>Quản lý sinh viên</h4>
    </div>
        
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Họ và tên</th>
                <th scope="col">Tên hiển thị</th>
                <th scope="col">Email</th>
                <th scope="col">Khoa</th>
                <th scope="col">Lớp</th>
                <!-- <th scope="col">Chỉnh sửa</th> -->
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student, index) => { %>
                <tr>
                    <th scope="row"><%= index+1 %> </th>
                    <td><%= student.name %></td>
                    <td><% if(student.nickName) { %> <%= student.nickName %>  <% } else { %> Chưa thiết lập <%} %></td>
                    <td><%= student.email %></td>
                    <td><% if(student.department) { %> <%= student.department %>  <% } else { %> Chưa thiết lập <%} %></td>
                    <td><% if(student.class) { %> <%= student.class %>  <% } else { %> Chưa thiết lập <%} %></td>
                    <!-- <td>
                        <a href="">Sửa</a>,
                        <a href="">Khóa</a>
                    </td> -->
                </tr>
            <% }) %> 
        </tbody> 
    </table>
</div>